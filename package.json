{
  "name": "dynamic-open-graph",
  "version": "0.2.0",
  "main": "index.ts",
  "repository": "https://github.com/yazaldefilimonepinto/dynamic-open-graph",
  "author": {
    "name": "Yazalde Filimone",
    "email": "yazaldefilimon@gmail.com",
    "url": "https://yazaldefilimone.vercel.app"
  },
  "license": "MIT",
  "keywords": [
    "clean code",
    "tdd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "og"
  ],
  "scripts": {
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js)\" --write",
    "postinstall": "husky install",
    "start": "node -r dotenv/config dist/core/open-graph.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config  src/core/open-graph.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "prepare": "husky install",
    "lint": "tslint -p tsconfig.json",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.8.3",
    "@vitest/coverage-c8": "^0.24.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "*",
    "vitest": "^0.24.3",
    "vite-tsconfig-paths": "^3.5.1"
  },
  "dependencies": {
    "joi": "^17.6.2",
    "module-alias": "^2.2.2"
  }
}
